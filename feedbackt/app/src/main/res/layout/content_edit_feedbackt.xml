<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/checkerboard"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".lib.activities.EditFeedbacktActivity"
    tools:showIn="@layout/activity_edit_feedbackt">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/border_thickness"
        android:background="@color/darkGrey" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <View
            android:layout_width="@dimen/border_thickness"
            android:layout_height="match_parent"
            android:background="@color/darkGrey" />

        <RadioGroup
            android:id="@+id/mode_selection_radio_group"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/drawing_mode_button"
                style="@style/RadioButtonImageOnly"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableTop="@drawable/baseline_edit_white_24" />

            <RadioButton
                android:id="@+id/number_mode_button"
                style="@style/RadioButtonImageOnly"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableTop="@drawable/baseline_add_circle_white_24" />

        </RadioGroup>

        <View
            android:layout_width="@dimen/border_thickness"
            android:layout_height="match_parent"
            android:background="@color/darkGrey" />

        <RelativeLayout
            android:id="@+id/undo_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#aaaaaa">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/baseline_undo_white_24" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/redo_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#aaaaaa">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/baseline_redo_white_24" />
        </RelativeLayout>

        <View
            android:layout_width="@dimen/border_thickness"
            android:layout_height="match_parent"
            android:background="@color/darkGrey" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/border_thickness"
        android:background="@color/darkGrey" />

    <RelativeLayout
        android:id="@+id/edited_image_layout"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center">

        <ImageView
            android:id="@+id/original_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:adjustViewBounds="true"
            android:src="@drawable/sample_screen" />

        <com.steamclock.feedbackt.lib.customcanvas.CustomCanvasView
            android:id="@+id/custom_canvas_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/bottom_actions"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorAccent">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/send_it_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:text="Send it"
            android:textColor="#fff" />

    </LinearLayout>


</LinearLayout>